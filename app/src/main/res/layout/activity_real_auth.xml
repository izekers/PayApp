<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ability_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_vertical_margin"
        android:paddingRight="@dimen/app_vertical_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/empty_card_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/auth_ok" />

            <TextView
                style="@style/name_style"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:textSize="20sp"
                android:text="资料提交成功" />
        </LinearLayout>
        <TextView
            android:id="@+id/auth_msg"
            style="@style/name_style"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="您的身份证信息已提交审核，请耐心等待。"/>
    </LinearLayout>
</RelativeLayout>