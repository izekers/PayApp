<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle"
    android:divider="@drawable/line"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/id_layout"
        style="@style/line_style"
        android:paddingEnd="@dimen/app_vertical_margin"
        android:paddingLeft="@dimen/app_vertical_margin"
        android:paddingRight="@dimen/app_vertical_margin"
        android:paddingStart="@dimen/app_vertical_margin">
        <TextView
            style="@style/name_style"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/trading_id"/>
        <TextView
            android:id="@+id/id_view"
            style="@style/name_style"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        style="@style/line_style"
        android:paddingEnd="@dimen/app_vertical_margin"
        android:paddingLeft="@dimen/app_vertical_margin"
        android:paddingRight="@dimen/app_vertical_margin"
        android:paddingStart="@dimen/app_vertical_margin">
        <TextView
            style="@style/name_style"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/trading_pay_man"/>
        <TextView
            android:id="@+id/name_view"
            style="@style/name_style"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        style="@style/line_style"
        android:paddingEnd="@dimen/app_vertical_margin"
        android:paddingLeft="@dimen/app_vertical_margin"
        android:paddingRight="@dimen/app_vertical_margin"
        android:paddingStart="@dimen/app_vertical_margin">
        <TextView
            style="@style/name_style"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/trading_order_amount"/>
        <TextView
            android:id="@+id/account_view"
            style="@style/name_style"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@android:color/holo_red_dark"
            android:text=""/>
    </LinearLayout>
</LinearLayout>