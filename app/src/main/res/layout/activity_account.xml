<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/ability_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/line"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                style="@style/name_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trad_color_list_bg"
                android:paddingBottom="@dimen/margin_little"
                android:paddingEnd="@dimen/app_vertical_margin"
                android:paddingLeft="@dimen/app_vertical_margin"
                android:paddingRight="@dimen/app_vertical_margin"
                android:paddingStart="@dimen/app_vertical_margin"
                android:paddingTop="@dimen/margin_little"
                android:text="@string/my_account"
                android:textColor="@color/trad_color_textcolor" />

            <LinearLayout
                style="@style/line_style"
                android:paddingEnd="@dimen/app_vertical_margin"
                android:paddingLeft="@dimen/app_vertical_margin"
                android:paddingRight="@dimen/app_vertical_margin"
                android:paddingStart="@dimen/app_vertical_margin">

                <TextView
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/my_account" />

                <TextView
                    android:id="@+id/id_view"
                    style="@style/name_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_layout"
                style="@style/line_style"
                android:paddingEnd="@dimen/app_vertical_margin"
                android:paddingLeft="@dimen/app_vertical_margin"
                android:paddingRight="@dimen/app_vertical_margin"
                android:paddingStart="@dimen/app_vertical_margin">

                <TextView
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phone2" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/phone_view"
                        style="@style/name_style"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/update" />

                    <ImageView
                        android:layout_width="@dimen/itemview_right_width"
                        android:layout_height="@dimen/itemview_right_height"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/next_indicator" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trad_color_list_bg"
            android:paddingBottom="@dimen/margin_little"
            android:paddingEnd="@dimen/app_vertical_margin"
            android:paddingLeft="@dimen/app_vertical_margin"
            android:paddingRight="@dimen/app_vertical_margin"
            android:paddingStart="@dimen/app_vertical_margin"
            android:paddingTop="@dimen/margin_little"
            android:text="@string/password_update"
            android:textColor="@color/trad_color_textcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/line"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                style="@style/line_style"
                android:paddingEnd="@dimen/app_vertical_margin"
                android:paddingLeft="@dimen/app_vertical_margin"
                android:paddingRight="@dimen/app_vertical_margin"
                android:paddingStart="@dimen/app_vertical_margin">

                <TextView
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/old_passwrod" />

                <EditText
                    android:id="@+id/old_password"
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:inputType="textPassword"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null" />
            </LinearLayout>

            <LinearLayout
                style="@style/line_style"
                android:paddingEnd="@dimen/app_vertical_margin"
                android:paddingLeft="@dimen/app_vertical_margin"
                android:paddingRight="@dimen/app_vertical_margin"
                android:paddingStart="@dimen/app_vertical_margin">

                <TextView
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_passwrod" />

                <EditText
                    android:id="@+id/new_password"
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:inputType="textPassword"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null" />
            </LinearLayout>

            <LinearLayout
                style="@style/line_style"
                android:paddingEnd="@dimen/app_vertical_margin"
                android:paddingLeft="@dimen/app_vertical_margin"
                android:paddingRight="@dimen/app_vertical_margin"
                android:paddingStart="@dimen/app_vertical_margin">

                <TextView
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/re_passwrod" />

                <EditText
                    android:id="@+id/re_password"
                    style="@style/name_style"
                    android:layout_width="0sp"
                    android:inputType="textPassword"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ok"
            style="@style/button_normal"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/ok" />
    </LinearLayout>
</ScrollView>