<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/app_vertical_margin"
        android:paddingStart="@dimen/app_vertical_margin"
        android:paddingEnd="@dimen/app_vertical_margin"
        android:paddingRight="@dimen/app_vertical_margin"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:background="@color/gray_f2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_time"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/item_text_style"/>

        <TextView
            android:id="@+id/item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_wait"
            style="@style/item_text_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:orientation="vertical"
        android:divider="@drawable/line_ver_gray">

        <LinearLayout
            android:id="@+id/item_pay_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/app_vertical_margin"
            android:paddingStart="@dimen/app_vertical_margin"
            android:paddingEnd="@dimen/app_vertical_margin"
            android:paddingRight="@dimen/app_vertical_margin"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/list_1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    style="@style/name_style"
                    android:id="@+id/list_1_name"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/list_1_value"
                    style="@style/name_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    style="@style/name_style"
                    android:id="@+id/list_2_name"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/list_2_value"
                    style="@style/name_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/btn_more"
                style="@style/name_style"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_small"
                android:text="更多>>"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/app_vertical_margin"
            android:paddingStart="@dimen/app_vertical_margin"
            android:paddingEnd="@dimen/app_vertical_margin"
            android:paddingRight="@dimen/app_vertical_margin"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:gravity="right">
            <TextView
                android:id="@+id/item_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/item_text_style"
                android:text="@string/goods_num"/>
            <TextView
                android:id="@+id/item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/item_text_style"
                android:textColor="@android:color/holo_red_light"
                android:text="test"/>
        </LinearLayout>
        <include layout="@layout/item_collection_menu"/>
        <include layout="@layout/item_payment_menu"/>
    </LinearLayout>
</LinearLayout>